<!-- Registration Popup -->
<div id="registration-popup" class="popup">
    <div class="popup-content">
        <span class="close-btn" onclick="closeRegistrationPopup()">×</span>
        <h3 class="text-center mb-4">Register for Car Wash</h3>
        <form id="car-wash-form" class="row g-3">
            <div class="col-md-6">
                <label for="user-type" class="form-label">User Type</label>
                <select class="form-select" id="user-type" required>
                    <option value="">Select User Type</option>
                    <option value="individual">Individual</option>
                    <option value="company">Company</option>
                    <option value="organization">Professional Organization</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="car-count" class="form-label">Number of Cars</label>
                <input type="number" class="form-control" id="car-count" min="1" required>
            </div>
            <div class="col-md-12">
                <label for="location" class="form-label">Preferred Location</label>
                <select class="form-select" id="location" required>
                    <option value="">Select Location</option>
                    <option value="residence">At My Residence</option>
                    <option value="ikeja">Ikeja Facility</option>
                    <option value="victoria-island">Victoria Island Facility</option>
                    <option value="lekki">Lekki Facility</option>
                </select>
            </div>
            <div class="col-12 text-center">
                <div id="charge-display" class="text-center mt-4 mb-4"></div>
                <button type="submit" class="btn btn-primary btn-lg">Submit Registration</button>
            </div>
        </form>
    </div>
</div>

