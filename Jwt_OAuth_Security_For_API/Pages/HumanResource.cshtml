@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ff6d00;
            --secondary-color: #1976d2;
            --light-color: #f5f7fa;
            --dark-color: #212121;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #ffffff;
            min-height: 100vh;
        }

        /* Hero Section */
        .hero-section {
            position: relative;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            margin: 0;
            padding: 0;
        }

        .hero-slider {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .hero-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1s ease;
            margin: 0;
            padding: 0;
        }

            .hero-slide.active {
                opacity: 1;
            }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1;
            margin: 0;
            padding: 0;
        }

        .hero-content {
            position: relative;
            z-index: 2;
            color: white;
            margin: 0;
            padding: 0;
        }

            .hero-content h1 {
                font-weight: 700;
                text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
            }

            .hero-content p {
                font-size: 1.2rem;
                text-shadow: 0 1px 5px rgba(0, 0, 0, 0.3);
            }

        /* Car Wash Carousel */
        .car-wash-carousel {
            margin: 0;
            padding: 0 0 2rem 0;
            background-color: var(--light-color);
        }

        .carousel-container {
            position: relative;
            width: 100%;
            height: 500px;
            overflow: hidden;
            border-radius: 10px;
        }

        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            opacity: 0;
            transition: opacity 1s ease;
        }

            .carousel-slide.active {
                opacity: 1;
            }

        .carousel-caption {
            position: absolute;
            bottom: 20px;
            left: 20px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 1rem;
            border-radius: 8px;
            max-width: 400px;
        }

            .carousel-caption h3 {
                margin: 0;
                font-size: 1.5rem;
            }

            .carousel-caption p {
                margin: 0.5rem 0 0;
                font-size: 1rem;
            }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            padding: 12px 30px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #e65100;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 109, 0, 0.4);
            }

        /* Quality Section */
        .quality-section {
            margin: 0;
            padding: 0 0 2rem 0;
        }

        .quality-card {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .quality-card:hover {
                transform: translateY(-5px);
            }

            .quality-card i {
                color: var(--secondary-color);
            }

        /* Popup */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            position: relative;
        }

        .close-btn {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 1.5rem;
            cursor: pointer;
            color: var(--dark-color);
        }

        .popup .form-control, .popup .form-select {
            height: 50px;
            border-radius: 8px;
        }

        #charge-display {
            font-size: 1.2rem;
            font-weight: 500;
            color: var(--secondary-color);
        }

        /* Footer */
        .footer {
            margin: 0;
            padding: 0;
        }

        /* Animations */
        .animate-on-scroll {
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

            .animate-on-scroll.visible {
                opacity: 1;
                transform: translateY(0);
            }

        @@media (max-width: 768px) {
            .hero-content h1 {
                font-size: 2.5rem;
            }

            .hero-content p {
                font-size: 1rem;
            }

            .carousel-container {
                height: 300px;
            }

            .carousel-caption h3 {
                font-size: 1.2rem;
            }

            .carousel-caption p {
                font-size: 0.9rem;
            }

            .quality-card {
                padding: 1.5rem;
            }

            .popup-content {
                width: 95%;
            }
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        // Hero Slider
        const heroSlides = document.querySelectorAll('.hero-slide');
        let currentHeroSlide = 0;

        function changeHeroSlide() {
            heroSlides[currentHeroSlide].classList.remove('active');
            currentHeroSlide = (currentHeroSlide + 1) % heroSlides.length;
            heroSlides[currentHeroSlide].classList.add('active');
        }

        heroSlides[currentHeroSlide].classList.add('active');
        setInterval(changeHeroSlide, 5000);

        // Car Wash Carousel
        const carWashSlides = document.querySelectorAll('.carousel-slide');
        let currentCarWashSlide = 0;

        function changeCarWashSlide() {
            carWashSlides[currentCarWashSlide].classList.remove('active');
            currentCarWashSlide = (currentCarWashSlide + 1) % carWashSlides.length;
            carWashSlides[currentCarWashSlide].classList.add('active');
        }

        carWashSlides[currentCarWashSlide].classList.add('active');
        setInterval(changeCarWashSlide, 5000);

        // Scroll Animation
        function revealOnScroll() {
            const elements = document.querySelectorAll('.animate-on-scroll');
            elements.forEach(element => {
                const windowHeight = window.innerHeight;
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;

                if (elementTop < windowHeight - elementVisible) {
                    element.classList.add('visible');
                }
            });
        }

        window.addEventListener('scroll', revealOnScroll);
        window.addEventListener('load', revealOnScroll);

        // Popup Management
        function openRegistrationPopup() {
            document.getElementById('registration-popup').style.display = 'flex';
        }

        function closeRegistrationPopup() {
            document.getElementById('registration-popup').style.display = 'none';
            document.getElementById('car-wash-form').reset();
            document.getElementById('charge-display').textContent = '';
        }

        // Charge Calculation
        document.getElementById('car-wash-form').addEventListener('input', function(e) {
            if (e.target.id === 'car-count') {
                const carCount = parseInt(e.target.value) || 0;
                let charge = carCount * 20; // Base charge of $20 per car
                if (carCount >= 5) {
                    charge *= 0.9; // 10% discount for 5+ cars
                }
                document.getElementById('charge-display').textContent = `Estimated Charge: $${charge.toFixed(2)}`;
            }
        });

        // Form Submission (Mock)
        document.getElementById('car-wash-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const userType = document.getElementById('user-type').value;
            const carCount = document.getElementById('car-count').value;
            const location = document.getElementById('location').value;
            if (userType && carCount && location) {
                alert(`Registration submitted!\nUser Type: ${userType}\nCars: ${carCount}\nLocation: ${location}`);
                closeRegistrationPopup();
            }
        });
    </script>
}
